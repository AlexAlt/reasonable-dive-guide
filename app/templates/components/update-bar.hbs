{{yield}}

{{#if updateBarForm}}
<div>
  <form>
    <h3>Update</h3>
    <div class="form-group">
      {{input value=name id="name" class="form-control" placeholder="Name"}}
    </div>

    <div class="form-group">
      {{input value=location id="location" class="form-control" placeholder="Location"}}
    </div>

    <button {{action "updateBar" bar}} class="btn btn-success">Update</button>
    <button {{action 'hideBarForm'}} class="btn btn-warning">Cancel</button>
  </form>
</div>
{{else}}
<button {{action 'barFormShow'}} class="btn btn-primary">Update This Bar</button>
{{/if}}
