{{yield}}

{{#if updateReview}}
<div>
  <form>
    <h3>Update</h3>
    <div class="form-group">
      {{input value=tagline id="tagline" class="form-control" placeholder="Description"}}
    </div>

    <div class="form-group">
      {{input value=userName id="userName" class="form-control" placeholder="Name"}}
    </div>

    <div class="form-group">
      {{input value=dateVisited id="dateVisited" class="form-control" placeholder="Date"}}
    </div>

    <div class="form-group">
      {{input value=reasonRating id="reasonRating" class="form-control" placeholder="Reasonable Rating"}}
    </div>

    <div class="form-group">
      {{input value=diveRating id="diveRating" class="form-control" placeholder="Dive Rating"}}
    </div>

    <div class="form-group">
      {{input value=anecdotes id="anecdotes" class="form-control" placeholder="Your experience..."}}
    </div>

    <div class="form-group">
      {{input value=happyHour id="happyHour" class="form-control" placeholder="Happy Hour"}}
    </div>
    <button {{action "update" review}} class="btn btn-success">Update</button>
    <button {{action 'updateHide'}} class="btn btn-warning">Cancel</button>
  </form>
</div>
{{else}}
<button {{action 'reviewFormShow'}} class="btn btn-primary">Update This Review</button>
{{/if}}
