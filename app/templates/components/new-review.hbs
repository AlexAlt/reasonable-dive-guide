{{yield}}

{{#if addReview}}
<div>
  <form>
    <h3>Add A New Review</h3>
    <div class="form-group">
      {{input value=tagline id="tagline" class="form-control" placeholder="Describe your review in one sentence..."}}
    </div>

    <div class="form-group">
      {{input value=userName id="userName" class="form-control" placeholder="Your Name"}}
    </div>

    <div class="form-group">
      {{input value=dateVisited id="dateVisited" class="form-control" placeholder="Date"}}
    </div>

    <div class="form-group">
      {{input value=reasonRating id="reasonRating" class="form-control" placeholder="Reasonably Priced Rating (1-5, 5 being the best deal EVER)"}}
    </div>

    <div class="form-group">
      {{input value=diveRating id="diveRating" class="form-control" placeholder="Dive Rating (1-5, 5 being the place with no bathroom doors"}}
    </div>

    <div class="form-group">
      {{input value=anecdotes id="anecdotes" class="form-control" placeholder="Talk about your experience..."}}
    </div>

    <div class="form-group">
      {{input value=happyHour id="happyHour" class="form-control" placeholder="Happy Hour Specials?"}}
    </div>
    <button {{action "saveReview" category}} class="btn btn-default">Add</button>
    <button {{action 'reivewFormHide'}} class="btn btn-default">Cancel</button>
  </form>
</div>
{{else}}
<button {{action 'reviewFormShow'}} class="btn btn-default">Click to Add Your Review</button>
{{/if}}
